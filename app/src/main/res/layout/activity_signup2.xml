<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup2Activity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="@id/bluelogo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/bluelogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logoblue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/paperlogyextrabold"
        android:text="갈랜더 회원가입"
        android:textColor="@color/MainColor"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/bluelogo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/paperlogyextrabold"
        android:text="이메일을\n입력해주세요"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@id/bluelogo"
        app:layout_constraintTop_toBottomOf="@id/bluelogo" />

    <TextView
        android:id="@+id/EmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="이메일"
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="@id/ep"
        app:layout_constraintTop_toBottomOf="@id/ep" />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="이메일을 입력해주세요"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="@+id/EmailText"
        app:layout_constraintTop_toBottomOf="@id/EmailText" />

    <ImageView
        android:id="@+id/sendBtn"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:src="@drawable/paperplane"
        app:layout_constraintBottom_toBottomOf="@id/email"
        app:layout_constraintEnd_toEndOf="@id/email"
        android:clickable="true"
        android:layout_marginBottom="11dp"
        />




    <TextView
        android:id="@+id/CheckNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="인증번호"
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="@id/ep"
        app:layout_constraintTop_toBottomOf="@id/email" />

    <EditText
        android:id="@+id/sendNumber"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="인증번호를 입력해주세요"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="@+id/EmailText"
        app:layout_constraintTop_toBottomOf="@id/CheckNumberText" />

    <Button
        android:id="@+id/Next2"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/MainColor"
        android:fontFamily="@font/roboto"
        android:text="다음"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>